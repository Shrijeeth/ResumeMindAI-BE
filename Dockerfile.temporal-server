FROM temporalio/admin-tools:1.22.4

# Hugging Face requires port 8000
EXPOSE 8000

# We use the temporal server binary directly in 'dev-mode'
# This automatically handles SQLite and the 'default' namespace
CMD ["temporal", "server", "start-dev", "--ip", "0.0.0.0", "--port", "7233", "--ui-port", "8000"]